{
    "extends": [
        "next/core-web-vitals",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "plugins": [
        "@emotion"
    ],
    "rules": {
        "no-restricted-imports": [
            "error",
            {
                "patterns": [
                    "@mui/*/*/*"
                ]
            }
        ],
        "@emotion/no-vanilla": "error",
        "@emotion/import-from-emotion": "error",
        "@emotion/styled-import": "error"
    },
    "ignorePatterns": [
        ".next/*",
        ".vscode/*",
        ".history/*",
        "node_modules/*"
    ]
}