{
    "transpileOnly": true,
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "strict": true,
        "target": "es6",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "module": "esnext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": [
        "../app/lib/utils.ts",
        "**/*.ts",
        "../app/lib/placeholder-data.ts"
    ],
    "exclude": [
        "node_modules",
        ".next/*.*",
        ".vscode/*/*"
    ],
    "esm": true // <--- this is the most important part
}